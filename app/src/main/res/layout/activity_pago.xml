<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PagoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVPago_ListaClientes"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="207dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/personitas" />

            <CheckBox
                android:id="@+id/ChPago_Todos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Todos" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/txtPago_Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:textAlignment="center"
                android:text="0.0"
                android:textSize="20dp"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto total" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione su mÃ©todo de pago"
            android:textColor="#000000"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="370dp"
            android:layout_height="97dp">

            <RadioButton
                android:id="@+id/rBPago_PayPal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PayPal" />

            <RadioButton
                android:id="@+id/rBPago_Efectivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Efectivo" />
        </RadioGroup>

        <Button
            android:id="@+id/btnPago_Confirmar"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="10dp"
            android:text="Confirmar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>